{% extends 'articlepulsehub.view.layout.html' %}

{% block banner %}

    {% set banner = {
        h4: "Term & Condition Policy",
        h1: "More on term, condition and privacy policies"
    } %}
    {{ include('articlepulsehub.view.banner.html', banner, with_context: true) }}

{% endblock %}


{% block head %}

    <!-- Primary Meta Tags -->
    <meta name="title" content="{{ page_title }}">
    <meta name="description" content="Read {{ site.get('site_name') }}'s Privacy Policy and Terms & Conditions to understand how we protect your personal data and govern site usage.">
    <meta name="keywords" content="Privacy Policy, Terms and Conditions, ArticlePulseHub, Data Protection, User Information">
    <meta name="author" content="{{ site.get('site_name') }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ request.http.getSchemeAndHttpHost }}{{ url('services.policy') }}">
    <meta property="og:title" content="{{ page_title }}">
    <meta property="og:description" content="Read {{ site.get('site_name') }}'s Privacy Policy and Terms & Conditions to understand how we protect your personal data and govern site usage.">
    <meta property="og:image" content="https://articlepulsehub.lndo.site/android-chrome-512x512.png">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="{{ request.http.getSchemeAndHttpHost }}{{ url('services.policy') }}">
    <meta name="twitter:title" content="{{ page_title }}">
    <meta name="twitter:description" content="Read {{ site.get('site_name') }}'s Privacy Policy and Terms & Conditions to understand how we protect your personal data and govern site usage.">
    <meta name="twitter:image" content="https://articlepulsehub.lndo.site/android-chrome-512x512.png">

    <!-- Robots / Crawlers -->
    <meta name="robots" content="index, follow">
    <meta name="googlebot" content="index, follow">
    <meta name="bingbot" content="index, follow">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ request.http.getSchemeAndHttpHost }}{{ url('services.policy') }}">

    <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "WebPage",
          "name": "{{ page_title }}",
          "url": "{{ request.http.getSchemeAndHttpHost }}{{ url('services.policy') }}",
  "description": "Read {{ site.get('site_name') }}'s Privacy Policy and Terms & Conditions to understand how we protect your personal data and govern site usage.",
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.get('site_name') }}",
    "url": "{{ request.http.getSchemeAndHttpHost }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ request.http.getSchemeAndHttpHost }}/favicon-32x32.png"
    },
    "sameAs": [
      "https://www.facebook.com/freeman.nyasulu.5",
      "https://www.instagram.com/chancenyasulu?igsh=cmN1Znl1bjk5eTQz"
    ],
    "contactPoint": [
      {
        "@type": "ContactPoint",
        "telephone": "{{ site.get('site_phone')|phone }}",
        "contactType": "customer service",
        "areaServed": "{{ site.get('site_country') }}",
        "availableLanguage": ["en"]
      }
    ]
  }
}
    </script>


{% endblock %}

