{% set recent_articles = recent_articles() %}
{% set categories = categories() %}
{% set tags = tags() %}
<div class="sidebar">
    <div class="row">
        <div class="col-lg-12">
            <div class="sidebar-item search">
                <form id="search_form" name="gs" method="GET" action="{{ url('services.search') }}">
                    <input type="text" name="q" class="searchText" placeholder="type to search..." autocomplete="on">
                </form>
            </div>
        </div>
        {% if recent_articles %}
            <div class="col-lg-12">
                <div class="sidebar-item recent-posts">
                    <div class="sidebar-heading">
                        <h2>Recent Posts</h2>
                    </div>
                    <div class="content">
                        <ul>
                            {% for article in recent_articles %}
                            <li>
                                <a href="{{ url('system.structure.content.node',{nid: article.nid}) }}">
                                    <h5>{{ article.title }}</h5>
                                    <span>{{ article.getUpdated|date('F d, Y') }}</span>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if categories %}
        <div class="col-lg-12">
            <div class="sidebar-item categories">
                <div class="sidebar-heading">
                    <h2>Categories</h2>
                </div>
                <div class="content">
                    <ul>
                        {% for category in categories %}
                        <li>
                            <a href="{{ url('services.articles.category', {name: category.name}) }}">- {{ category.label|capitalize }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        {% endif %}

        {% if tags %}
        <div class="col-lg-12">
            <div class="sidebar-item tags">
                <div class="sidebar-heading">
                    <h2>Tag Clouds</h2>
                </div>
                <div class="content">
                    <ul>
                        {% for tag in tags %}
                        <li>
                            <a href="{{ url('services.articles.tag', {name: tag.name}) }}">{{ tag.label|capitalize }}</a>
                        </li>
                       {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        {% endif %}

    </div>
</div>